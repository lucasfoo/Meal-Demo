<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertNewDish">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="20dp" >
            <TextView
                android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_above = "@id/edit_dish_name"
                android:text="Dish name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_dish_name"
                android:textSize="22sp"
                android:hint="enter dish name"
                android:imeOptions="actionDone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/change_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_below = "@id/edit_dish_name"
                android:text="Description"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_description"
                android:textSize="22sp"
                android:layout_below="@id/change_description"
                android:hint=" Description"
                android:imeOptions="actionDone"/>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/enter_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/preparation_duration"
                android:text="Preparation Duration"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/preparation_duration"
                android:id="@+id/edit_preparation_duration"
                android:textSize="22sp"
                android:hint="Enter Dish Preparation Duration"
                android:imeOptions="actionDone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/edit_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/change_price"
                android:text="Price"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_price"
                android:id="@+id/edit_price"
                android:textSize="22sp"
                android:hint="Enter your price"
                android:imeOptions="actionDone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/edit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/change_photo"
                android:text="Dish photo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/edit_photo1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:imeOptions="actionDone"
                    android:maxWidth="42dp"
                    android:maxHeight="42dp"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    tools:visibility="visible" />
                <ImageView
                    android:id="@+id/edit_photo2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:maxWidth="42dp"
                    android:maxHeight="42dp"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    tools:visibility="visible" />
                <ImageView
                    android:id="@+id/edit_photo3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:maxWidth="42dp"
                    android:maxHeight="42dp"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "choose photo"
                android:textSize="22sp"
                android:layout_below="@id/enter_photo"
                android:id="@+id/edit_chooseFile"

                />


            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Save"
                android:text="Save"
                android:textSize="30dp"
                />

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_menu_camera" />


</FrameLayout>